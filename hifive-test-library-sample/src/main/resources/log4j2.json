{
  "configuration": {
    "status": "WARN",
    "appenders": {
      "Console": {
        "name": "Console",
        "target": "SYSTEM_OUT",
        "PatternLayout": {
          "pattern": "%d{yy/MM/dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"
        }
      },
      "RollingFile": {
        "name": "RollingFileAppender",
        "fileName": "./logs/multidevicetest.log",
        "filePattern": "./logs/multidevicetest-%d{yyyy-MM-dd}-%i.log",
        "PatternLayout": {
          "pattern": "%d{DEFAULT} [%t] %-5level %logger{36} - %msg%n"
        },
        "TimeBasedTriggeringPolicy": {}
      }
    },
    "loggers": {
      "logger": {
        "name": "com.htmlhifive.testlib",
        "level": "DEBUG",
        "AppenderRef": [
          { "ref": "Console" },
          { "ref": "RollingFileAppender" }
        ]
      },
      "root": {
        "level": "INFO",
        "AppenderRef": { "ref": "Console" }
      }
    }
  }
}